<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <top>
      <FlowPane BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" onAction="#showReportWindow" text="%show_report" />
         </children>
      </FlowPane>
   </top>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
   <center>
      <SplitPane dividerPositions="0.7" orientation="VERTICAL" prefWidth="160.0" BorderPane.alignment="CENTER">
        <items>
            <ListView fx:id="history" prefHeight="200.0" prefWidth="200.0" />
            <VBox>
               <children>
                  <TextArea fx:id="commandText" minHeight="50.0" onKeyPressed="#onKeyPressed" />
                  <ListView fx:id="searchView" prefHeight="0.0" VBox.vgrow="ALWAYS" />
               </children>
            </VBox>
        </items>
         <BorderPane.margin>
            <Insets top="10.0" />
         </BorderPane.margin>
      </SplitPane>
   </center>
   <bottom>
      <FlowPane alignment="CENTER" hgap="10.0" vgap="10.0" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" onAction="#done" text="%done">
               <FlowPane.margin>
                  <Insets />
               </FlowPane.margin>
            </Button>
            <Button mnemonicParsing="false" onAction="#fin" text="%fin" />
         </children>
         <BorderPane.margin>
            <Insets top="10.0" />
         </BorderPane.margin>
      </FlowPane>
   </bottom>
</BorderPane>
